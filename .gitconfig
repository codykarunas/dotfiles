[user]
  name = Cody Karunas
  email = codykarunas@gmail.com

[core]
  editor = vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore

[color]
  ui = auto

[color "branch"]
  current = red bold
  local = green bold
  remote = cyan bold

[color "diff"]
  meta = red bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = green bold
  changed = red bold
  untracked = magenta bold

[alias]
  # add aliases
  a = add --all

  # status aliases
  s = status

  # branch aliases
  b = branch

  # commit aliases
  c = commit
  ca = commit -a
  cm = commit -m

  # clone aliases
  cl = clone

  # log aliases
  l = log --pretty=oneline
  lg = log --oneline --graph --decorate
